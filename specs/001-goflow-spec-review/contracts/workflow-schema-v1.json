{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/dshills/goflow/workflow-schema-v1.json",
  "title": "GoFlow Workflow Definition",
  "description": "Schema for GoFlow workflow YAML files v1.0",
  "type": "object",
  "required": ["version", "name", "servers", "nodes", "edges"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0$",
      "description": "Workflow schema version"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Workflow unique name"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "icon": { "type": "string", "maxLength": 10 }
      }
    },
    "variables": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$",
            "description": "Variable identifier"
          },
          "type": {
            "type": "string",
            "enum": ["string", "number", "boolean", "object", "array", "any"]
          },
          "default": {
            "description": "Default value (must match type)"
          },
          "description": { "type": "string" }
        }
      }
    },
    "servers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "command"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Unique server identifier"
          },
          "name": { "type": "string" },
          "command": { "type": "string" },
          "args": {
            "type": "array",
            "items": { "type": "string" }
          },
          "transport": {
            "type": "string",
            "enum": ["stdio", "sse", "http"],
            "default": "stdio"
          },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "credential_ref": { "type": "string" }
        }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 2,
      "items": {
        "oneOf": [
          {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "start" }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "end" },
              "return": { "type": "string" }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type", "server", "tool", "output"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "mcp_tool" },
              "server": { "type": "string" },
              "tool": { "type": "string" },
              "parameters": {
                "type": "object",
                "additionalProperties": { "type": "string" }
              },
              "output": { "type": "string" },
              "retry": {
                "type": "object",
                "properties": {
                  "max_attempts": { "type": "integer", "minimum": 1 },
                  "backoff": {
                    "type": "string",
                    "enum": ["exponential", "constant", "linear"]
                  },
                  "initial_delay": { "type": "string" },
                  "max_delay": { "type": "string" },
                  "on": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type", "input", "expression", "output"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "transform" },
              "input": { "type": "string" },
              "expression": { "type": "string" },
              "output": { "type": "string" }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type", "condition"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "condition" },
              "condition": { "type": "string" }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type", "branches"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "parallel" },
              "branches": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "merge": {
                "type": "string",
                "enum": ["wait_all", "wait_any", "wait_first"],
                "default": "wait_all"
              }
            },
            "additionalProperties": false
          },
          {
            "type": "object",
            "required": ["id", "type", "collection", "item", "body"],
            "properties": {
              "id": { "type": "string" },
              "type": { "const": "loop" },
              "collection": { "type": "string" },
              "item": { "type": "string" },
              "body": {
                "type": "array",
                "items": { "type": "string" }
              },
              "break_condition": { "type": "string" }
            },
            "additionalProperties": false
          }
        ]
      }
    },
    "edges": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "condition": { "type": "string" },
          "label": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
